<main class="container">
  <h2 class="text-center mt-5 mb-5">The best recipes for your best friend</h2>

  <div class="row justify-content-center">
    <div class="col-lg-7">
      <div class="input-group input-group-lg">
        <input type="text" id="search_field" autofocus class="form-control" placeholder="Search for...">
        <div class="input-group-append">
          <button type="submit" class="btn btn-block btn-primary"><i class="fa fa-search mr-3"></i> Search</button>
        </div>
      </div>


      <div class="mt-3 table-responsive-lg">
        <nav class="mb-3">
          <ul class="pagination d-flex justify-content-center">
            <li class="page-item">
              <a class="page_button page-link" href="javascript:;" data-add="-2">Prev</a>
            </li>
            <li class="page-item">
              <a class="page_button page-link" href="javascript:;" data-add="+2">Next</a>
            </li>
          </ul>
        </nav>

        <table class="table table-hover table-scale--hover table-cards align-items-center">
          <tbody id="recipes-list"></tbody>
        </table>
      </div>
    </div>
  </div>
</main>
